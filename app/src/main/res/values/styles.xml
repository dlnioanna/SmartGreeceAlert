<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AbortButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/abort</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:padding">@dimen/large</item>
        <item name="android:text">@string/abort_button</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_marginBottom">@dimen/extra_large</item>
    </style>
    <style name="FireButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/fire</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:padding">@dimen/large</item>
        <item name="android:layout_marginBottom">@dimen/extra_large</item>
        <item name="android:layout_marginTop">@dimen/extra_large</item>
        <item name="android:text">@string/fire_button</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="ContactsTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:layout_marginTop">@dimen/extra_large</item>
        <item name="android:text">@string/add_contacts_title</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="AlertInfoStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primary_variant</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:layout_marginTop">@dimen/extra_large</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="TextTimesStyle">
        <item name="android:layout_width">@dimen/timer_text_dimension</item>
        <item name="android:layout_height">@dimen/timer_text_dimension</item>
        <item name="android:textColor">@color/primary_light</item>
        <item name="android:textSize">@dimen/timer_text_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="FABStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/fab_margin</item>
        <item name="android:layout_marginBottom">@dimen/fab_margin</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="CardViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/small</item>
        <item name="android:padding">@dimen/small</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="VerticalLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="CardViewContactNameTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/card_text_size_name</item>
    </style>
    <style name="CardViewContactTelephoneTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/card_content_padding</item>
    </style>
    <style name="NewContactEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/medium</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="CircularDeterminateProgressBar">
        <item name="android:layout_width">@dimen/timer_progress_bar_dimension</item>
        <item name="android:layout_height">@dimen/timer_progress_bar_dimension</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/circular_progress_bar</item>
    </style>
</resources>